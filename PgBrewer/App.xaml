<Application x:Class="PgBrewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PgBrewer"
             xmlns:conv="clr-namespace:Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Startup="OnStartup">
    <Application.Resources>
        <conv:BooleanToObjectConverter x:Key="convBooleanToObject"/>
        <conv:NullToObjectConverter x:Key="convNullToObject"/>
        <conv:IdToImageSourceConverter x:Key="convIdToImageSource"/>
        <conv:PositiveIntToObjectConverter x:Key="convPositiveIntToObject"/>
        <RoutedCommand x:Key="DeleteCommand"/>
        <RoutedCommand x:Key="SaveCommand"/>
        <RoutedCommand x:Key="ExportCommand"/>
        <RoutedCommand x:Key="ImportCommand"/>
        <RoutedCommand x:Key="BackCommand"/>
        <RoutedCommand x:Key="ForwardCommand"/>
        <RoutedCommand x:Key="DeleteLineCommand"/>
        <CompositeCollection x:Key="CollapsedVisible">
            <Visibility>Collapsed</Visibility>
            <Visibility>Visible</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="VisibleCollapsed">
            <Visibility>Visible</Visibility>
            <Visibility>Collapsed</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="TransparentBlue">
            <SolidColorBrush>Transparent</SolidColorBrush>
            <SolidColorBrush>LightBlue</SolidColorBrush>
        </CompositeCollection>
        <CompositeCollection x:Key="VisibleHidden">
            <Visibility>Visible</Visibility>
            <Visibility>Hidden</Visibility>
        </CompositeCollection>
        <CompositeCollection x:Key="FalseTrue">
            <sys:Boolean>False</sys:Boolean>
            <sys:Boolean>True</sys:Boolean>
        </CompositeCollection>
        <Style x:Key="TabItemRaw" TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <ContentPresenter ContentSource="Header"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="ChoiceTemplate">
            <TextBlock Text="{Binding Name}"/>
        </DataTemplate>
        <DataTemplate x:Key="AssociationLine">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding Component.Name}" TextAlignment="Right" VerticalAlignment="Center" MinWidth="160"/>
                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">:</TextBlock>
                <Button DockPanel.Dock="Right" Command="{StaticResource DeleteCommand}" Content="X" VerticalAlignment="Center" MinWidth="16" Margin="2,1,2,1"/>
                <ComboBox ItemsSource="{Binding ChoiceList}" SelectedIndex="{Binding AssociationIndex}" IsReadOnly="True" ItemTemplate="{StaticResource ChoiceTemplate}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </DockPanel>
        </DataTemplate>
        <ControlTemplate TargetType="{x:Type Button}" x:Key="MainButtonTemplate">
            <Grid>
                <Border x:Name="BorderTarget" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="120" Height="40" Margin="0,5,0,5">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" Margin="12,2,12,2"/>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="Gray"/>
                    <Setter Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <DataTemplate x:Key="PageHeaderTemplate" DataType="{x:Type local:PgBrewerPage}">
            <Grid>
                <Border Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource CollapsedVisible}}" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="160" Height="140" Margin="0,5,0,5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding IconId, Converter={StaticResource convIdToImageSource}}" Width="64" Height="64" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TextTargetSelected" FontSize="24" HorizontalAlignment="Center" Text="{Binding Name}"/>
                    </StackPanel>
                </Border>
                <Border x:Name="BorderTarget" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleCollapsed}}" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5" Width="160" Height="140" Margin="0,5,0,5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding IconId, Converter={StaticResource convIdToImageSource}}" Width="64" Height="64" Margin="0,0,0,10"/>
                        <TextBlock x:Name="TextTargetUnselected" FontSize="24" HorizontalAlignment="Center" Text="{Binding Name}"/>
                    </StackPanel>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="Gray"/>
                    <Setter TargetName="TextTargetSelected" Property="Foreground" Value="DarkGray" />
                    <Setter TargetName="TextTargetUnselected" Property="Foreground" Value="DarkGray" />
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate x:Key="TabItemLevel2Template" DataType="{x:Type local:Alcohol}">
            <Grid>
                <Border Margin="5,4,5,-1.2" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource CollapsedVisible}}" Background="LightBlue" BorderBrush="Black" BorderThickness="1,1,1,0" CornerRadius="5,5,0,0" Width="120" Height="35.2">
                    <TextBlock x:Name="TextTargetSelected" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding Name}" Margin="12,2,12,2"/>
                </Border>
                <Border x:Name="BorderTarget" Visibility="{Binding IsSelected, Converter={StaticResource convBooleanToObject}, ConverterParameter={StaticResource VisibleCollapsed}}" Margin="5,4,5,10" Background="Transparent" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Width="120" Height="24">
                    <TextBlock x:Name="TextTargetUnselected" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding Name}" Margin="12,2,12,2"/>
                </Border>
            </Grid>
            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="BorderTarget" Property="Background" Value="#FFE5F3FB"/>
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="#FF70C0E7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="BorderTarget" Property="Background" Value="DarkBlue" />
                    <Setter TargetName="BorderTarget" Property="BorderBrush" Value="Black" />
                    <Setter TargetName="BorderTarget" Property="CornerRadius" Value="5,5,5,5" />
                    <Setter TargetName="BorderTarget" Property="Margin" Value="5,4,5,10" />
                    <Setter TargetName="BorderTarget" Property="Height" Value="24" />
                    <Setter TargetName="TextTargetSelected" Property="Foreground" Value="DarkGray" />
                    <Setter TargetName="TextTargetUnselected" Property="Foreground" Value="DarkGray" />
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <DataTemplate x:Key="EffectTemplate">
            <TextBlock Text="{Binding Text}"/>
        </DataTemplate>
