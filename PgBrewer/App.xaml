                <ScrollViewer Margin="10,10,10,10">
                    <DockPanel Margin="0,0,10,0">
                        <GroupBox DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Header="Miscellaneous" Padding="5,5,5,5">
