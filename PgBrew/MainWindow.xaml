<Window x:Class="PgBrew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PgBrew"
        Title="Project: Gorgon - Brewing"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        SizeToContent="WidthAndHeight"
        MinWidth="1000"
        MinHeight="500"
        Closing="OnClosing">
    <TabControl>
        <TabItem Header="Beer">
            <TabControl>
                <TabItem Header="Basic Lager">
                    <local:Alcoholx4Control DataContext="{Binding BasicLager}"/>
                </TabItem>
                <TabItem Header="Pale Ale">
                    <local:Alcoholx4x4Control DataContext="{Binding PaleAle}"/>
                </TabItem>
                <TabItem Header="Marzen">
                    <local:Alcoholx4x4x2Control DataContext="{Binding Marzen}"/>
                </TabItem>
                <TabItem Header="Goblin Ale">
                    <local:Alcoholx3x3x4x3Control DataContext="{Binding GoblinAle}"/>
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="Hard Liquor">
            <TabItem Header="Potato Vodka">
            </TabItem>
        </TabItem>
        <TabItem Header="Settings">
        </TabItem>
    </TabControl>
</Window>
